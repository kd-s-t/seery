echo "ğŸ” Running pre-push checks..."

# Run linting for Next.js
if [ -d "nextjs" ]; then
  echo "ğŸ“¦ Linting Next.js..."
  cd nextjs
  npm run lint || {
    echo "âŒ Next.js linting failed"
    exit 1
  }
  cd ..
fi

# Run linting for Express.js (if it has a lint script)
if [ -d "expressjs" ]; then
  echo "ğŸ“¦ Checking Express.js..."
  cd expressjs
  if npm run | grep -q "lint"; then
    npm run lint || {
      echo "âŒ Express.js linting failed"
      exit 1
    }
  fi
  cd ..
fi

echo "âœ… All pre-push checks passed!"

